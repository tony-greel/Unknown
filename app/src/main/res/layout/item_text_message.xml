<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:id="@+id/rl_text_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cv_text_left_head"
            android:layout_marginLeft="10dp"
            android:layout_width="@dimen/item_head_length"
            android:layout_height="@dimen/item_head_length" />
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginTop="22dp"
            android:layout_toRightOf="@id/cv_text_left_head"
            android:background="@drawable/left_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15sp"
                android:text="你好"
                android:id="@+id/tv_text_left"
                android:scaleType="centerCrop"
                android:maxWidth="200dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:visibility="visible"
        android:id="@+id/rl_text_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cv_text_head_right"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/item_head_length"
            android:layout_height="@dimen/item_head_length" />

        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/right_bubble"
            android:layout_toLeftOf="@id/cv_text_head_right"
            android:id="@+id/ll_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:textSize="15sp"
                android:text="利好"
                android:id="@+id/tv_text_right"
                android:maxWidth="200dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ProgressBar
            android:layout_marginRight="5dp"
            android:layout_marginTop="34dp"
            android:id="@+id/pb_text"
            android:layout_toLeftOf="@id/ll_right"
            android:layout_width="@dimen/item_pb_length"
            android:layout_height="@dimen/item_pb_length" />
        <ImageView
            android:layout_marginRight="5dp"
            android:layout_marginTop="34dp"
            android:visibility="gone"
            android:id="@+id/iv_fail"
            android:layout_toLeftOf="@id/ll_right"
            android:src="@drawable/send_fail"
            android:layout_width="@dimen/item_pb_length"
            android:layout_height="@dimen/item_pb_length" />
    </RelativeLayout>


</RelativeLayout>