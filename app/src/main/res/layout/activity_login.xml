<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true">


        <ImageView
            android:id="@+id/long_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-3dp"
            android:layout_marginRight="-160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/login"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="138dp"
        android:src="@drawable/long_logo"
        android:layout_marginTop="80dp"/>


    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/btn_login"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="240dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/linearLayout"
       >

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:textSize="15sp"
                android:background="@drawable/name"
                android:textColor="@color/black"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <EditText
                android:textSize="13sp"
                android:maxLines="1"
                android:id="@+id/et_login_username"
                android:background="@drawable/btn_login"
                android:hint="@string/Account_number"
                android:layout_width="match_parent"
                android:layout_height="36dp" />
        </LinearLayout>

        <View
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="0.5px"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:textSize="15sp"
                android:background="@drawable/password"
                android:textColor="@color/black"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <EditText
                android:textSize="13sp"
                android:maxLines="1"
                android:inputType="textPassword"
                android:id="@+id/et_login_password"
                android:hint="@string/Password"
                android:background="@drawable/btn_login"
                android:layout_width="match_parent"
                android:layout_height="36dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/long_linear"
        android:layout_width="match_parent"
        android:layout_height="90dp" 
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="10dp">
        
        <ImageButton
            android:id="@+id/qq_long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:background="@drawable/q_long"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="80dp"
            />
        
        <ImageButton
            android:id="@+id/micro_long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/w_long"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="120dp"/>
        
   </LinearLayout>


    <Button
        android:id="@+id/long_but"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_login"
        android:text="@string/but_login"
        android:textColor="@color/btu_login"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="27dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/register_but"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_login"
        android:text="@string/but_register"
        android:textColor="@color/btu_login"
        android:layout_marginLeft="193dp"
        android:layout_marginTop="533dp"/>



</RelativeLayout>