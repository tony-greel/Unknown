<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ljj.unknown.activity.NotificationActivity">

    <LinearLayout
        android:id="@+id/ll_notification"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_notification"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:id="@+id/tv_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:textColor="#000000"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_notification_agree"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@color/green"
        android:text="同意"
        android:textColor="@color/btu_login"
        android:layout_marginStart="72dp"
        android:layout_below="@+id/ll_notification" />

    <Button
        android:id="@+id/btn_notification_refuse"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@color/green"
        android:text="拒绝"
        android:textColor="@color/btu_login"
        android:layout_marginStart="202dp"
        android:layout_below="@+id/ll_notification" />
</RelativeLayout>
